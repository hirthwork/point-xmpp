{% set _user = '<a href="xmpp:%(jid)s?message;type=chat;body=@%(author)s%%20" style="color:#4488ff; font-weight:bold; text-decoration:none;">@%(author)s</a>'|format(jid=settings.xmpp_jid, author=author) %}
{% set _post = '<a href="xmpp:%(jid)s?message;type=chat;body=%%23%(post_id)s%%20" style="color:#448844; font-weight:bold; text-decoration:none;">#%(post_id)s</a>'|format(jid=settings.xmpp_jid, post_id=post_id) %}
{% set _comment = '<a href="xmpp:%(jid)s?message;type=chat;body=%%23%(post_id)s%%2f%(comment_id)s%%20" style="color:#448844; font-weight:bold; text-decoration:none;">#%(post_id)s/%(comment_id)s</a>'|format(jid=settings.xmpp_jid, post_id=post_id, comment_id=comment_id) %}
{% if comment_id %}{{ _('%s recommended your comment %s')|format(_user, _comment)|safe }}
{% else %}{{ _('%s recommended your post %s')|format(_user, _post)|safe }}{% endif %}
{% if text %}: {{text|xhtmlim|safe}} 
(<a href="xmpp:{{settings.xmpp_jid}}?message;type=chat;body=%23{{post_id}}%2f{{rcid}}%20" style="color:#448844; font-weight:bold; text-decoration:none;">#{{post_id}}/{{rcid}}</a> <a href="https://{{settings.domain}}/{{post_id}}#{{rcid}}">https://{{settings.domain}}/{{post_id}}#{{rcid}}</a>)<br/>
{% else %}<br/>{% if comment_id %}<a href="https://{{settings.domain}}/{{post_id}}#{{comment_id}}">https://{{settings.domain}}/{{post_id}}#{{comment_id}}</a>{% else %}<a href="https://{{settings.domain}}/{{post_id}}">https://{{settings.domain}}/{{post_id}}</a>{% endif %}{% endif %}
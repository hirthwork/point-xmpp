{% set _author = '<a href="xmpp:%(jid)s?message;type=chat;body=@%(author)s%%20" style="color:#4488ff; font-weight:bold; text-decoration:none;">@%(author)s</a>'|format(jid=settings.xmpp_jid, author=author) %}
{% set _post = '<a href="xmpp:%(jid)s?message;type=chat;body=%%23%(post_id)s%%20" style="color:#448844; font-weight:bold; text-decoration:none;">#%(post_id)s</a>'|format(jid=settings.xmpp_jid, post_id=post_id) %}
{{_('%s has edited %s')|format(_author, _post)|safe }}:<br/>
{% if tags %}{% for t in tags %}
    <a href="xmpp:{{settings.xmpp_jid}}?message;type=chat;body=**{{t}}" style="color:#808080;text-decoration:none">*{{ t }}</a>
{% endfor %}{% endif %}
<p>
{{text|xhtmlim|safe}}
</p>
{% if link %}<p style="margin:0"><a href="{{link}}">{{link|short}}</a></p>{% endif %}
{% if files %}
<p>
{% for f in files %}
<a href="http{{settings.media_root}}/{{f}}">{{f|basename}}</a><br/>
{% endfor %}
</p>
{% endif %}
{% include "xhtml/_post_menu.tmpl' %}